filegroup(
    name = "all_files",
    srcs = [
        "BUILD.bazel",
        "WORKSPACE",
        "go_repos.bzl",
        "workspace_deps.bzl",
        "//language/scala:all_files",
    ],
    visibility = ["//visibility:public"],
)

# Use "bazel build //:jar_class_index --output_groups=index_json" to produce a JSON file
jar_class_index(
    name = "jar_class_index",
    platform_jars = ["@bazel_tools//tools/jdk:platformclasspath"],
)
